<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
						<h3 class="text-center"><%= params_header %></h3>
          </div>
        </div>
        <div class="panel-body">
          <%= form_for @product, html: { class: 'form-group'} do |f| %>
            <% if product.errors.any? %>
              <div id="error_explanation">
                <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">Ã—</button>
                  <% product.errors.full_messages.each do |message| %>
                    <p><%= message %></p>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :price, "Price (in cents)" %>
              <%= f.number_field :price, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :permalink %>
              <%= f.text_field :permalink, class: 'form-control', placeholder: 'product-name' %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit class: 'btn btn-default btn-lg btn-block' %>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
          <%= link_to 'Back', products_path %></br>
          <% if params[:action] === 'edit' %>
            <%= link_to 'Show', @product %></br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
