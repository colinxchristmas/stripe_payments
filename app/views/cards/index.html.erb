<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Stripe</th>
      <th>Card name</th>
      <th>Card last four</th>
      <th>Card type</th>
      <th>Card exp month</th>
      <th>Card exp year</th>
      <th>Default card</th>
      <th>=</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.stripe_id %></td>
        <td><%= card.card_name %></td>
        <td><%= card.card_last_four %></td>
        <td><%= card.card_type %></td>
        <td><%= card.card_exp_month %></td>
        <td><%= card.card_exp_year %></td>
        <td><%= card.default_card %></td>
        <td><%= card.= %></td>
        <td><%= card.user %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

