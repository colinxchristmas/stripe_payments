<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            <h3 class="text-center">Login</h3>
          </div>
        </div>
        <% flash.each do |name, msg| %>
					<% unless msg == 'true' %>
            <div class="alert alert-danger text-center"><%= msg.titleize %></div>
					<% end %>
				<% end %>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-group'}) do |f| %>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me, class: 'form-check' %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="form-group">
              <%= f.submit "Log in", class: 'btn btn-default btn-lg btn-block' %>
            </div>
        </div>
        <div class="panel-footer">
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
