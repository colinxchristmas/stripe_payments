<div class="container">
  <div class="row margin-top-20">
		<div class="col-md-12">
			<div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <div class="panel-heading">Sales</div>
            </div>
            <!-- <div class="col col-xs-6">
              <%# link_to 'New Product', new_sale_path, class: 'btn btn-default btn-sm pull-right' %>
            </div> -->
          </div>
  			</div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Stripe Id</th>
  	            <th>Product</th>
  	            <th>Name</th>
  	            <th>Email</th>
                <th>Price</th>
                <th>Date</th>
                <th>Show</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @sales.each do |sale| %>
                <tr>
                  <td><%= sale.stripe_id %></td>
                  <td><%= sale.product.name %></td>
                  <td><%= sale.user.full_name %></td>
                  <td><%= sale.user.email %></td>
                  <td><%= formatted_price(sale.product.price) %></td>
                  <td><%= sale.created_at.strftime("%m/%d/%Y") %></td>
                  <td><%= link_to '<i class="fa fa-folder-open-o fa-lg"></i>'.html_safe, sale, class: 'btn btn-success btn-xs' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
